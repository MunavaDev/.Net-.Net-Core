@model IEnumerable<EntityFramework_MasterDetailExample.Models.OrderLine>

@{
    ViewBag.Title = "ViewOrder";
}

<h2>ViewOrder</h2>

<p>
    <button class="btn btn-primary" onclick="window.location.href='@Url.Action("Index","Orders")'">Return</button>
</p>

<h2>Order Total</h2>

<h3>R @ViewBag.OrderTotal</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Supplier.Name)
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Product.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Product.Price)
        (@Model.Sum(x => x.Quantity * x.Product.Price))
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.Supplier.Name)
    </td>
</tr>
}

</table>
