 <!--Without Model Binding:model List<string>   -->
<!--With Model Binding :--> @model List<TDO_DB_MVC.Models.CarsModel>

<h1>Cars in db</h1>

<div class="alert alert-success" role="alert" style="margin-left:500px;width:300px">
    @ViewBag.Message
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div style="background-color:rgba(0,0,0,0.84); border-radius:20px">
    <table class="table">
        <thead>
            <tr style="color:white">
                <th scope="col">Model</th>
                <th scope="col">Manufacturer</th>
                <th scope="col">Price in(R)</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr style="color:white">
                    <td>@car.Name</td>
                    <td>@car.Model</td>
                    <td>@car.Price</td>
                    <td> <button class="btn btn-primary" onclick="location.href ='@Url.Action("UpdateCar","Home",new { Id = car.ID})'"><i class="glyphicon glyphicon-pencil"></i> </button></td>
                    <td> <button class="btn btn-danger" onclick="location.href ='@Url.Action("DeleteCar","Home",new { Id = car.ID})'"><i class="glyphicon glyphicon-trash"></i> </button></td>
                </tr>
            }
        </tbody>
    </table>
</div>