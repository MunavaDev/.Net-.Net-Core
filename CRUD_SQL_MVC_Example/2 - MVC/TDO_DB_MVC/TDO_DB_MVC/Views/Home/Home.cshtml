@{
    ViewBag.Title = "Home";
}

<h2>Home</h2>

<h3>
    Response From db
</h3>

<div style="margin-left:200px;border-radius:20px;border-color:forestgreen; border:solid 2px;padding-left:50px">
    <p style="color:red">@ViewBag.ResponseError</p>
</div>

<br />

<div class="alert alert-success" role="alert" style="margin-left:500px;width:300px">
    @ViewBag.Message
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>



<div>
    <button onclick="window.location.href='@Url.Action("ReadCars", "Home")'" style="width:500px;height:100px;border-radius:20px; margin-left:400px" class="btn btn-success btn-lg">View Cars</button>
</div>



<br />

<!--Using Razor to Add object to db using a htmlbeginform-->
@using (Html.BeginForm("AddCars","Home"))
{
<div style="margin-left:505px;border-radius:20px;border: solid 2px;padding-left:50px;width:300px">

    <div class="form-horizontal" style="align-content:center">

        <div class="form-group" style="border-radius:20px">
            <br />
            <h4>Add New Car </h4>

            <div class="form-group" style="border-radius:20px">
                <label>Car Name </label>
                <input id="CarName" name="CarName" style="color:black;border-radius:20px" required />
            </div>



            <div class="form-group" style="border-radius:20px">
                <label>Car Model </label>
                <input id="CarModel" name="CarModel" style="color:black;border-radius:20px" required />
            </div>


            <div class="form-group" style="border-radius:20px">
                <label>Car Price </label>
                <input id="CarPrice" name="CarPrice" style="color:black;border-radius:20px" required/>
            </div>



            <div style="margin-left:50px">
               <button type="submit" class="btn btn-primary" style="border-radius:20px"> Add object to db  </button>
            </div>

            </div>

        </div>

</div>
   
}